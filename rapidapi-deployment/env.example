# Environment Variables for Holiday Calendar API
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=3000

# CORS Configuration
ALLOWED_ORIGINS=*

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS_BASIC=10
RATE_LIMIT_MAX_REQUESTS_PRO=100
RATE_LIMIT_MAX_REQUESTS_ENTERPRISE=1000

# External API Configuration
EXTERNAL_API_TIMEOUT=5000
EXTERNAL_API_RETRY_ATTEMPTS=3

# Security
HELMET_ENABLED=true
CORS_ENABLED=true

# Monitoring
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# RapidAPI Specific
RAPIDAPI_ENABLED=true
RAPIDAPI_SUBSCRIPTION_HEADER=x-rapidapi-subscription
